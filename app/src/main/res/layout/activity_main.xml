<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/selection_theme_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="theme change test"
        />
    <Button
        android:id="@+id/selection_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Selection Recycler view" />

    <Button
        android:id="@+id/selection_sequence_event"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_marginTop="92dp"
        android:text="Sequence event"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/selection_item_animator"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="item animator test" />

    <Button
        android:id="@+id/retrofit_test"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="retrofit test" />
</LinearLayout>

